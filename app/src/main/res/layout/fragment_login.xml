<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/colorPrimaryDark">

    <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextUsername" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:background="@android:color/background_light"
            android:height="20dp" android:hint="@string/textUsername"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPassword" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextUsername"
            app:layout_constraintStart_toStartOf="@+id/editTextUsername"
            app:layout_constraintEnd_toEndOf="@+id/editTextUsername"
            android:background="@android:color/background_light" android:height="30dp"
            android:hint="@string/textPassword"/>
    <Button
            android:text="LogIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLogIn"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            app:layout_constraintEnd_toEndOf="@+id/editTextPassword"
            app:layout_constraintStart_toStartOf="@+id/editTextPassword" android:textAllCaps="false"/>
    <TextView
            android:text="Need an Account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSignUp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogIn" app:layout_constraintEnd_toEndOf="@+id/buttonLogIn"
            app:layout_constraintStart_toStartOf="@+id/buttonLogIn" android:textColor="@android:color/background_light"/>
</androidx.constraintlayout.widget.ConstraintLayout>